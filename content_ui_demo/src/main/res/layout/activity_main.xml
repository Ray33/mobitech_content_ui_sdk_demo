<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.mobitech.content_ui_demo.ui.MainActivity">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switchFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="@string/switch_fragments_old_version"
        android:textSize="16sp" />

    <Button
        android:id="@+id/load_content_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/load"
        android:onClick="loadContent"/>
    <FrameLayout
        android:id="@+id/content_ui_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
